<div class="row">
  <div class="col s4">
    <% @notes.each do |note| %>
      <div class="card horizontal yellow">
        <div class="card-stacked">
          <div class="card-action">
            <span class="card-title"><%= note.title %></span>
          </div>
          <div class="card-content">
            <p><b><%= (note.description).capitalize %></b></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>